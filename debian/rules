#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export DPKG_GENSYMBOLS_CHECK_LEVEL=4
DEB_HOST_MULTI_ARCH ?= $(shell dpkg-architecture -qDEB_BUILD_MULTIARCH)

%:
	dh $@ --fail-missing

           
override_dh_auto_test:
	mkdir -p debian/tmp/home/run
	# xvfb-run can't load gl drivers, Xvfb can
	Xvfb :5 -screen 0 1280x1024x24 &
	env DISPLAY=:5 dh_auto_test && kill -9 `pidof -s Xvfb`

override_dh_install:
	dh_auto_build -- docs
	mkdir -p debian/tmp/`qmake -query QT_INSTALL_DOCS`/qch 
	dh_install --fail-missing

