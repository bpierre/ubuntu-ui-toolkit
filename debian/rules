#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Get ubuntu distribution codename
DIST:=$(shell grep -e "^DISTRIB_CODENAME=" /etc/lsb-release|sed s/.*=//g)

# we need to override dh_install as libqt4-dev has a packaging bug in precise
override_dh_install:

# check if we have precise (12.04 LTS)
ifeq ($(DIST),precise)
	echo "usr/lib/qt4/imports" > debian/qt-components-ubuntu.install

# some other
else
	echo "usr/lib/*/qt4/imports" > debian/qt-components-ubuntu.install
endif

# execute dh_install and fail if something was not packaged
	dh_install --fail-missing

%:
	dh $@ 
